generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model BlogArticle {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    title     String
    url       String   @unique
    category  String
    content   Json
    entry     Json
}
